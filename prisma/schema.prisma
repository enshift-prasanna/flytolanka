generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Category model
model Category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  image       String?
  defaultText String?
  packages    Package[]
}

// Package model
model Package {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  title               String
  categoryId          String
  days                String
  shortDescription    String
  detailedDescription String
  image               String?
  category            Category @relation(fields: [categoryId], references: [id])
}

// Blog model
model Blog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  excerpt   String
  content   String
  image     String?
  createdAt DateTime @default(now())
}

// ThingsToDo model (copy of Blog)
model ThingsToDo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  excerpt   String
  content   String
  image     String?
  createdAt DateTime @default(now())
}

// Vehicle model
model Vehicle {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  title String
  image String?
}
